<h2>Edit Comment</h2>
<div>
    <%= form_with model: @comment do |form| %>
        <p>
          <%= form.label :body %><br>
          <%= form.text_area :body %>
        </p>
        <p>
          <%= form.submit %>
        </p>
    <% end %>
    <p>Comment last updated: <%= @comment.updated_at.strftime("%B %d %Y, %l:%M%P") %></p>

</div>
